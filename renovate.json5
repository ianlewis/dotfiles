{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'schedule:monthly',
    ':gitSignOff',
    'github>aquaproj/aqua-renovate-config#2.7.5',
  ],
  vulnerabilityAlerts: {
    schedule: '* 0-4 * * *',
  },
  configWarningReuseIssue: false,
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'AQUA_VERSION *\\??= *(?<currentValue>\\S+)',
      ],
      depNameTemplate: 'aquaproj/aqua',
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'SLSA_VERIFIER_VERSION *\\??= *(?<currentValue>\\S+)',
      ],
      depNameTemplate: 'slsa-framework/slsa-verifier',
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'GO_VERSION *\\??= *(?<currentValue>\\S+)',
      ],
      depNameTemplate: 'golang',
      datasourceTemplate: 'golang-version',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'NODE_VERSION *\\??= *(?<currentValue>\\S+)',
      ],
      depNameTemplate: 'node',
      datasourceTemplate: 'node-version',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'github-actions',
      pinDigests: true,
    },
    {
      matchManagers: [
        'pip_requirements',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'python',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchDepTypes: [
        'dependencies',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'npm',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchDepTypes: [
        'devDependencies',
      ],
      groupName: 'npm dev',
    },
  ],
}
